{
  "compilerOptions": {
    "types": [
      "obsidian-typings"
    ],
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2021",
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2021"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./scripts/**/*.ts"
  ]
}